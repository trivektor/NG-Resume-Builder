%h1.page-header
  .row
    .col-lg-8{contenteditable: true} {{ resume.name }}
    .col-lg-4.text-right
      %a.btn.btn-info{ng: {href: '/resumes'}}
        %i.fa.fa-reply
        Back to Resumes

.row
  .col-lg-8
    .block
      aaa
  .col-lg-4
    %form{ng: {submit: 'update()'}, class: 'resume-block'}

      .form-group
        %label.control-label
          %abbr.text-danger{title: 'required'} *
          Name
        %input.form-control{type: 'text', placeholder: 'e.g. John\'s Resume', ng: {model: 'name'}, required: true}

      .form-group
        %label.control-label
          Description
        %textarea.form-control{type: 'text', rows: 4, placeholder: 'Describe your resume', ng: {model: 'description'}}

      .form-group
        %button.btn.btn-success Update